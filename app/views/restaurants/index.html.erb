<div class="content">

  <h1>Restaurants</h1>
  <%= link_to 'add a restaurant', restaurants_new_path %>

  <% @restaurants.all.each do |rest| %>
    <div class="restaurant-tile">
      <h5><%= rest.name %></h5>
      <div class="restaurant-actions">
        <%= link_to 'view', restaurant_path(rest) %>
        <%= link_to 'add review', new_restaurant_review_path(rest.id) %>
      </div>
    </div>
  <% end %>

</div>
